---
import { imageUrlForPortableText, type ImageAsset } from "@/libs/sanity";
import AstroImage from "@/components/image.astro";

interface Props {
  node: {
    _type: string;
    _key: string;
    asset: ImageAsset;
  };
}

const { node } = Astro.props;

const src = imageUrlForPortableText(node.asset);
---

<AstroImage src={src} />
